# Environment Variables
# Copy this file to .env and fill in the values

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# Google Service Account (base64 encoded JSON)
GOOGLE_SERVICE_ACCOUNT=base64_encoded_service_account_json

# Spreadsheet ID (from your Google Sheets URL)
# Example URL: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
SPREADSHEET_ID=your_spreadsheet_id_here

# Admin emails (comma-separated, only these can login)
ADMIN_EMAILS=admin@gmail.com

# JWT Secret (random string for signing tokens)
JWT_SECRET=your_random_secret_here_make_it_long

# Site URL (for OAuth callback)
SITE_URL=http://localhost:4321
